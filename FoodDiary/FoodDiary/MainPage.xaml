<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodDiary.MainPage">

    <StackLayout>
        <Frame BackgroundColor="LimeGreen" Padding="20" CornerRadius="0">
            <Label Text="Stravovací deník" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36" FontFamily="RalewayB"/>
        </Frame>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <ImageButton Source="diet.jpg" Grid.Row="0" Grid.Column="0" Margin="20, 20, 10, 20"/>
            <Label Text="Ahoj" Grid.Row="0" Grid.Column="1"/>
            <Label Text="Ahoj" Grid.Row="1" Grid.Column="0"/>
            <Label Text="Ahoj" Grid.Row="1" Grid.Column="1"/>
            <Label Text="Ahoj" Grid.Row="2" Grid.Column="0"/>
            <Label Text="Ahoj" Grid.Row="2" Grid.Column="1"/>
        </Grid>
    </StackLayout>

</ContentPage>
